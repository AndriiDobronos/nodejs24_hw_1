extends layout

block headContent
    //script(src="/addUser_button.js" type="module")
block title
    h2 The users list for edit

block content
    div#root
        table.mainTable
            thead
                each headerItem in ["ID", "Username", "Email", "Employee"]
                    th(class=headerItem.toLowerCase())= headerItem
            tbody
                each userItem in locals.usersList
                    tr
                        td= userItem.id
                        td= userItem.username
                        td= userItem.email
                        td= userItem.employee

        a.pressme(href="/pug/add-user") Add users
        a.pressme(href="/pug/delete-user") Delete user by Id